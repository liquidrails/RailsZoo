<h1>Editing subname</h1>

<%= error_messages_for :subname %>

<% form_for([:cactus, @subname]) do |f| %>

<p>
  <b>ID:</b>
  <%=h @subname.id.to_s %>
</p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', cactus_subname_path(@subname) %> |
<%= link_to 'Back', url_for(:controller =>"cactus/admin", :action => "index")%>
