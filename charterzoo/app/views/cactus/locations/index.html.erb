<h1>Listing locations</h1>

<table cellspacing=3>
  <tr>
    <td><h3>ID</h3></td>
    <td><h3>Name</h3></td>
    <td><h3>State</h3></td>
    <td><h3>Country</h3></td>
  </tr>

<% for location in @locations %>
  <tr>
    <td><%= location.id %></td>
    <td><%= location.name %></td>
    <td><%= location.state %></td>
    <td><%= location.country %></td>
    <td><%= link_to 'Show', [:cactus, location] %></td>
    <td><%= link_to 'Edit', edit_cactus_location_path(location) %></td>
    <td><%= link_to 'Destroy', [:cactus,location], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

