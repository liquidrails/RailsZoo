<h2>New location</h2>

<%= error_messages_for :location %>

<% form_for([:cactus,@location], :url =>{:action => "create"}) do |f| %>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>State</b><br />
    <%= f.text_field :state %>
  </p>

  <p>
    <b>Country</b><br />
    <%= f.text_field :country %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', url_for(:controller =>"cactus/admin", :action => "index") %>
