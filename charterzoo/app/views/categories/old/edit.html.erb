<h1>Editing category</h1>

<%= error_messages_for :category %>

<% form_for(@category) do |f| %>

<p>
  <b>ID:</b>
  <%=h @category.id.to_s %>
</p>

  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @category %> |
<%= link_to 'Back', categories_path %>
