<table cellspacing=3>
  <tr>
    <td><h3>ID</h3></td>
    <td><h3>Name</h3></td>
  </tr>

<% for butterword in @butterwords %>
  <tr>
    <td><%= butterword.id %></td>
    <td><%= butterword.name %></td>
    <td><%= link_to 'Show', [:cactus, butterword] %></td>
    <td><%= link_to 'Edit', edit_cactus_butterword_path(butterword) %></td>
    <td><%= link_to 'Destroy', [:cactus, butterword], :confirm => 'Are you sure you want to delete this butterword?', :method => "delete" %></td>
  </tr>
<% end %>
</table>

