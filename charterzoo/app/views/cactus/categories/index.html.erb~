<table cellspacing=3>
  <tr>
    <td><h3>ID</h3></td>
    <td><h3>Name</h3></td>
  </tr>

<% for category in @categories %>
  <tr>
    <td><%= category.id %></td>
    <td><%= category.name %></td>
    <td><%= link_to 'Show', [:cactus, category] %></td>
    <td><%= link_to 'Edit', edit_cactus_category_path(category) %></td>
    <td><%= link_to 'Destroy', [:cactus, category], :confirm => 'Are you sure you want to delete this category?', :method => "delete" %></td>
  </tr>
<% end %>
</table>

