<br>
<h2>New subcategory</h2>

<%= error_messages_for :subcategory %>
<%= error_messages_for :subname %>

<% form_for([:cactus,@subcategory], :url =>{:action => "create"}) do |f| %>

  <p>
    <b>Category</b><br />
    <%= select(:subcategory, :category_id, Category.find(:all).collect{|p| [p.name, p.id]},{:prompt=>'Select Category'}) %>
  </p>


<% fields_for :subname do |s| %>
  <p>
    <b>Name</b><br>
    <%= s.text_field :name %>
  </p>
<% end %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', url_for(:controller =>"cactus/admin", :action => "index") %>
